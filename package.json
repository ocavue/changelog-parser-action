{
  "name": "changelog-parser-action",
  "version": "1.0.1",
  "private": true,
  "description": "A GitHub Actions workflow to read and parse your CHANGELOG",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts __tests__/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "pnpm run build && pnpm run format && pnpm run lint && pnpm run package && pnpm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ocavue/changelog-parser-action"
  },
  "keywords": [
    "actions",
    "changelog",
    "changelog-parser"
  ],
  "author": "ocavue <ocavue@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.4.0"
  },
  "devDependencies": {
    "@jest/globals": "^27.0.6",
    "@types/changelog-parser": "^2.7.1",
    "@types/node": "^16.3.3",
    "@typescript-eslint/parser": "^4.28.3",
    "@vercel/ncc": "^0.29.0",
    "changelog-parser": "^2.8.0",
    "eslint": "^7.31.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.3.6",
    "jest": "^27.0.6",
    "js-yaml": "^4.1.0",
    "prettier": "2.2.1",
    "ts-jest": "^27.0.3",
    "typescript": "^4.1.3"
  }
}
